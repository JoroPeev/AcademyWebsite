@{
    ViewData["Title"] = "429 Too Many Requests";
}

<div class="error-container">
    <div class="error-code">429</div>
    <h1>Too Many Requests</h1>
    <div class="error-message">
        <p>You have sent too many requests in a given amount of time.</p>
        <p>Please wait a moment before trying again.</p>
        @if (ViewData["RetryAfter"] != null)
        {
            <p>You can try again in @ViewData["RetryAfter"] seconds.</p>
        }
    </div>
    <div class="error-actions">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="icon-home"></i> Return Home
        </a>
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="icon-arrow-left"></i> Go Back
        </a>
    </div>
</div>