@{
    ViewData["Title"] = "500 Internal Server Error";
}

<div class="error-container">
    <div class="error-code">500</div>
    <h1>Internal Server Error</h1>
    <div class="error-message">
        <p>Sorry, something went wrong on our server.</p>
        <p>Our technical team has been notified and is working to resolve the issue.</p>
        @if (!string.IsNullOrEmpty(ViewData["ErrorId"] as string))
        {
            <p>Error ID: @ViewData["ErrorId"]</p>
        }
    </div>
    <div class="error-actions">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="icon-home"></i> Return Home
        </a>
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="icon-arrow-left"></i> Go Back
        </a>
    </div>
</div>