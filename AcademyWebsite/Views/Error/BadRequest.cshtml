
@{
    ViewData["Title"] = "400 Bad Request";
}

<div class="error-container">
    <div class="error-code">400</div>
    <h1>Bad Request</h1>
    <div class="error-message">
        <p>The server could not understand the request due to invalid syntax.</p>
        <p>Please check your request and try again.</p>
    </div>
    <div class="error-actions">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="icon-home"></i> Return Home
        </a>
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="icon-arrow-left"></i> Go Back
        </a>
    </div>
</div>